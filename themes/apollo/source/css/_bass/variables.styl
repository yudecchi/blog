// Colors
color-default = #4f5759
color-title = #222
color-border = #ddd
color-link = #33a6b8
color-background = #fff
color-code = #f9f9f9
color-meta = #999
color-footer = #777

@import url("//fonts.googleapis.com/css?family=Source+Code+Pro");
@import url("//fonts.googleapis.com/css?family=M+PLUS+1p");

// Fonts
font-sans = 'M PLUS 1p', sans-serif
font-serif = Georgia, "Times New Roman", "DejaVu Serif", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, "DejaVu Sans Mono", monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 100%
line-height = 2em
